{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\w64devkit\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/AppData/*.cpp",
                "-I./includes",
                "-L./lib",
                "-lraylib",
                "-lgdi32",
                "-lwinmm",
                "-ldiscord-rpc",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
